@model UserRoleViewModel
@{
    ViewData["Title"] = "Role_Add";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}
<style>
    .shadow {
        box-shadow: 0 .2rem 1rem rgba(0,0,0,0.10) !important;
    }

    .form-check {
        position: relative;
        display: block;
        padding-left: 1rem;
        padding-top: 6px;
